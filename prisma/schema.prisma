generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Cambia esto seg√∫n tu base de datos (mysql, sqlite, etc.)
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blogs     Blog[]
  posts     Post[]
}

model Blog {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      Usuario  @relation(fields: [userId], references: [id])
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  isActive  Boolean  @default(true)
  blogId    Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blog      Blog     @relation(fields: [blogId], references: [id])
  user      Usuario  @relation(fields: [userId], references: [id])
}
